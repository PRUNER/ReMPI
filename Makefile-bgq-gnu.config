
# MPI C++ compiler
CXX 		= /usr/local/tools/compilers/ibm/mpicxx-fastmpi-mpich-312
CC		= $(CXX)

# Passed to compiler
OPT_LEVEL	= -O2
DEBUG_LEVEL	= -g -std=c++0x -pthread 
#DEBUG_LEVEL	= -g -pthread 
EXTRA_CCFLAGS	= -Wall -DBGQ
CXXFLAGS	= $(OPT_LEVEL) $(DEBUG_LEVEL) $(EXTRA_CCFLAGS)  -I./ -I../src -I/g/g90/sato5/opt/opt-bgq/include -I/usr/local/tools/zlib-1.2.6/include
CCFLAGS		= $(CXXFLAGS) 


# Passed to the C pre-processor
CPPFLAGS        =  -I./ -I../src -I/g/g90/sato5/opt/opt-bgq/include
CFLAGS		= $(CPPFLAGS)

# Passed to the linker
LDFLAGS         = -L./ -lstdc++  -L/g/g90/sato5/opt/opt-bgq/lib -L /usr/local/tools/zlib-1.2.6/lib -lpnmpi -lz# -lintlc

# Link with these libraries
LDLIBS          =

# Installation path
prefix		= ./lib

#others
PnMPI_DIR       = /g/g90/sato5/opt/opt-bgq/

