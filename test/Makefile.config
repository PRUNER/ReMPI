# DIRECTORY_PATH
SRC_DIR = ../src
TEST_DIR = ../test
EXAMPLE_DIR = ../example

# MPI C++ compiler
CXX 		= mpiicc  -fPIC
CC		= $(CXX)

# Passed to compiler
OPT_LEVEL	= -O2
DEBUG_LEVEL	= -g -std=c++0x -pthread  -fPIC
EXTRA_CCFLAGS	= -Wall
CXXFLAGS	= $(OPT_LEVEL) $(DEBUG_LEVEL) $(EXTRA_CCFLAGS) -fPIC
CCFLAGS		= $(CXXFLAGS)  -fPIC

# Passed to the C pre-processor
CPPFLAGS        = -I./ 
CFLAGS		= $(CPPFLAGS)

# Passed to the linker
LDFLAGS         = -L./ -lstdc++ 

# Link with these libraries
LDLIBS          =

# Installation path
prefix		= ./lib

